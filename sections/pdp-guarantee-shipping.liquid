{% liquid
  assign use_theme_colors = section.settings.use_theme_colors
  if use_theme_colors == nil
    assign use_theme_colors = true
  endif

  if use_theme_colors
    assign background_color = settings.global_section_background_color
    assign text_color = settings.global_section_text_color
    assign accent_color = settings.global_section_accent_1_color
  else
    assign background_color = section.settings.background_color
    assign text_color = section.settings.text_color
    assign accent_color = section.settings.accent_color
  endif
%}

<style>
  .pdp-guarantee.section-{{ section.id }} {
    background: {{ background_color }};
    color: {{ text_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.side_padding }}px {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .pdp-guarantee__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    gap: 16px;
  }

  .pdp-guarantee__header {
    display: grid;
    gap: 6px;
  }

  .pdp-guarantee__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    border-radius: 999px;
    background: {{ accent_color | color_lighten: 40 }};
    color: {{ accent_color }};
    font-weight: var(--font-weight-medium);
    width: fit-content;
  }

  .pdp-guarantee__heading {
    margin: 0;
    font-size: {{ section.settings.heading_size }}px;
    letter-spacing: var(--letter-spacing-heading);
  }

  .pdp-guarantee__description {
    margin: 0;
    color: {{ section.settings.description_color | default: text_color }};
    line-height: 1.6;
  }

  .pdp-guarantee__content {
    display: grid;
    gap: 16px;
  }

  .pdp-guarantee__badges {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .pdp-guarantee__badge {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 12px 14px;
    border-radius: {{ section.settings.badge_radius }}px;
    background: {{ section.settings.badge_background }};
    border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};
    color: {{ text_color }};
    font-weight: var(--font-weight-medium);
  }

  .pdp-guarantee__badge img {
    width: 28px;
    height: 28px;
  }

  .pdp-guarantee__links {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .pdp-guarantee__link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ accent_color }};
    text-decoration: none;
    font-weight: var(--font-weight-medium);
  }
</style>

<div class="pdp-guarantee section-{{ section.id }}">
  <div class="pdp-guarantee__inner">
    <div class="pdp-guarantee__header">
      {% if section.settings.eyebrow != blank %}
        <div class="pdp-guarantee__eyebrow">
          {% if section.settings.eyebrow_icon != blank %}
            <img src="{{ section.settings.eyebrow_icon | img_url: '60x' }}" alt="" width="18" height="18" loading="lazy">
          {% endif %}
          <span>{{ section.settings.eyebrow }}</span>
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="pdp-guarantee__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="pdp-guarantee__description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <div class="pdp-guarantee__content">
      {% assign badge_blocks = section.blocks | where: 'type', 'badge' %}
      {% if badge_blocks.size > 0 %}
        <div class="pdp-guarantee__badges">
          {% for block in badge_blocks %}
            <span class="pdp-guarantee__badge" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | img_url: '80x' }}" alt="" loading="lazy">
              {% endif %}
              <span>{{ block.settings.text }}</span>
            </span>
          {% endfor %}
        </div>
      {% endif %}

      <div class="pdp-guarantee__links">
        {% if section.settings.shipping_link != blank %}
          <a class="pdp-guarantee__link" href="{{ section.settings.shipping_link }}">
            {{ section.settings.shipping_text }}
          </a>
        {% endif %}
        {% if section.settings.returns_link != blank %}
          <a class="pdp-guarantee__link" href="{{ section.settings.returns_link }}">
            {{ section.settings.returns_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "PDP Guarantee + Shipping",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_theme_colors",
      "label": "Use theme colors",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1f1f1f"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#ef4a65"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "unit": "px",
      "min": 0,
      "max": 120,
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "unit": "px",
      "min": 0,
      "max": 120,
      "default": 48
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "Side padding",
      "unit": "px",
      "min": 0,
      "max": 80,
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin top",
      "unit": "px",
      "min": 0,
      "max": 100,
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin bottom",
      "unit": "px",
      "min": 0,
      "max": 100,
      "default": 0
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width",
      "unit": "px",
      "min": 700,
      "max": 1400,
      "step": 10,
      "default": 1040
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Confidence built-in"
    },
    {
      "type": "image_picker",
      "id": "eyebrow_icon",
      "label": "Eyebrow icon"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Guarantee, shipping, and returns"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "unit": "px",
      "min": 20,
      "max": 48,
      "default": 28
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We stand behind every order with fast dispatch, transparent tracking, and a 60-day promise."
    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description color",
      "default": "#3a3a3a"
    },
    {
      "type": "range",
      "id": "badge_radius",
      "label": "Badge radius",
      "unit": "px",
      "min": 0,
      "max": 24,
      "default": 12
    },
    {
      "type": "range",
      "id": "badge_border_width",
      "label": "Badge border width",
      "unit": "px",
      "min": 0,
      "max": 3,
      "default": 1
    },
    {
      "type": "color",
      "id": "badge_border_color",
      "label": "Badge border color",
      "default": "#eaeaea"
    },
    {
      "type": "color",
      "id": "badge_background",
      "label": "Badge background",
      "default": "#f9f9f9"
    },
    {
      "type": "url",
      "id": "shipping_link",
      "label": "Shipping info link",
      "default": "/policies/shipping-policy"
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Shipping link text",
      "default": "See shipping details"
    },
    {
      "type": "url",
      "id": "returns_link",
      "label": "Returns link",
      "default": "/policies/refund-policy"
    },
    {
      "type": "text",
      "id": "returns_text",
      "label": "Returns link text",
      "default": "Returns & exchanges"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "60-day money-back guarantee"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PDP Guarantee + Shipping",
      "blocks": [
        { "type": "badge" },
        { "type": "badge" },
        { "type": "badge" }
      ]
    }
  ]
}
{% endschema %}
