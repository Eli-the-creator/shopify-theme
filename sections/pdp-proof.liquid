{% liquid
  assign use_theme_colors = section.settings.use_theme_colors
  if use_theme_colors == nil
    assign use_theme_colors = true
  endif

  if use_theme_colors
    assign background_color = settings.global_section_background_color
    assign text_color = settings.global_section_text_color
    assign accent_color = settings.global_section_accent_1_color
  else
    assign background_color = section.settings.background_color
    assign text_color = section.settings.text_color
    assign accent_color = section.settings.accent_color
  endif
%}

<style>
  .pdp-proof.section-{{ section.id }} {
    background: {{ background_color }};
    color: {{ text_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.side_padding }}px {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .pdp-proof__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    gap: 18px;
  }

  .pdp-proof__header {
    text-align: center;
    display: grid;
    gap: 8px;
  }

  .pdp-proof__heading {
    margin: 0;
    font-size: {{ section.settings.heading_size }}px;
    letter-spacing: var(--letter-spacing-heading);
  }

  .pdp-proof__subheading {
    margin: 0;
    color: {{ section.settings.subheading_color | default: text_color }};
    line-height: 1.5;
    max-width: 760px;
    justify-self: center;
  }

  .pdp-proof__grid {
    display: grid;
    gap: {{ section.settings.card_gap }}px;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, minmax(0, 1fr));
  }

  @media (min-width: 900px) {
    .pdp-proof__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, minmax(0, 1fr));
    }
  }

  .pdp-proof__card {
    padding: {{ section.settings.card_padding }}px;
    border-radius: {{ section.settings.card_radius }}px;
    background: {{ section.settings.card_background }};
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    display: grid;
    gap: 12px;
    height: 100%;
  }

  .pdp-proof__media {
    border-radius: {{ section.settings.media_radius }}px;
    overflow: hidden;
    background: {{ section.settings.media_background }};
  }

  .pdp-proof__media img {
    width: 100%;
    height: auto;
    display: block;
  }

  .pdp-proof__video {
    position: relative;
    padding-top: {{ section.settings.video_aspect_ratio }}%;
  }

  .pdp-proof__video iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .pdp-proof__quote {
    margin: 0;
    font-size: {{ section.settings.quote_size }}px;
    line-height: 1.6;
  }

  .pdp-proof__author {
    margin: 0;
    font-weight: var(--font-weight-medium);
  }

  .pdp-proof__meta {
    margin: 0;
    color: {{ section.settings.meta_color }};
  }

  .pdp-proof__rating {
    display: inline-flex;
    gap: 4px;
    color: {{ accent_color }};
  }
</style>

<div class="pdp-proof section-{{ section.id }}">
  <div class="pdp-proof__inner">
    <div class="pdp-proof__header">
      {% if section.settings.heading != blank %}
        <h2 class="pdp-proof__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="pdp-proof__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="pdp-proof__grid">
      {% for block in section.blocks %}
        <article class="pdp-proof__card" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank or block.settings.video_url != blank %}
            <div class="pdp-proof__media">
              {% if block.settings.video_url != blank %}
                <div class="pdp-proof__video">
                  {% if block.settings.video_url.type == 'youtube' %}
                    <iframe src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?rel=0&showinfo=0" allowfullscreen title="{{ block.settings.media_alt | escape }}"></iframe>
                  {% elsif block.settings.video_url.type == 'vimeo' %}
                    <iframe src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}" allowfullscreen title="{{ block.settings.media_alt | escape }}"></iframe>
                  {% endif %}
                </div>
              {% else %}
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.media_alt | escape }}" loading="lazy">
              {% endif %}
            </div>
          {% endif %}

          {% if block.settings.rating != blank %}
            <div class="pdp-proof__rating" aria-label="Rated {{ block.settings.rating }} out of 5 stars">
              {% assign rating_value = block.settings.rating | default: 5 | times: 1 %}
              {% for i in (1..5) %}
                {% if rating_value >= i %}
                  <span aria-hidden="true">★</span>
                {% elsif rating_value > i-1 %}
                  <span aria-hidden="true">⯨</span>
                {% else %}
                  <span aria-hidden="true">☆</span>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          {% if block.settings.quote != blank %}
            <p class="pdp-proof__quote">“{{ block.settings.quote }}”</p>
          {% endif %}

          {% if block.settings.author != blank %}
            <p class="pdp-proof__author">{{ block.settings.author }}</p>
          {% endif %}

          {% if block.settings.meta != blank %}
            <p class="pdp-proof__meta">{{ block.settings.meta }}</p>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</div>

