{% liquid
  assign use_theme_colors = section.settings.use_theme_colors
  if use_theme_colors == nil
    assign use_theme_colors = true
  endif

  if use_theme_colors
    assign background_color = settings.global_section_background_color
    assign text_color = settings.global_section_text_color
    assign accent_color = settings.global_section_accent_1_color
  else
    assign background_color = section.settings.background_color
    assign text_color = section.settings.text_color
    assign accent_color = section.settings.accent_color
  endif
%}

<style>
  .pdp-faq.section-{{ section.id }} {
    background: {{ background_color }};
    color: {{ text_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.side_padding }}px {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .pdp-faq__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    gap: 16px;
  }

  .pdp-faq__header {
    text-align: center;
    display: grid;
    gap: 8px;
  }

  .pdp-faq__heading {
    margin: 0;
    font-size: {{ section.settings.heading_size }}px;
    letter-spacing: var(--letter-spacing-heading);
  }

  .pdp-faq__subheading {
    margin: 0;
    color: {{ section.settings.subheading_color | default: text_color }};
    line-height: 1.5;
    max-width: 720px;
    justify-self: center;
  }

  .pdp-faq__list {
    display: grid;
    gap: {{ section.settings.accordion_gap }}px;
  }

  .pdp-faq__item {
    border-radius: {{ section.settings.accordion_radius }}px;
    border: {{ section.settings.accordion_border_width }}px solid {{ section.settings.accordion_border_color }};
    overflow: hidden;
    background: {{ section.settings.accordion_background }};
  }

  .pdp-faq__summary {
    cursor: pointer;
    padding: {{ section.settings.accordion_padding }}px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    color: {{ text_color }};
    font-weight: var(--font-weight-medium);
  }

  .pdp-faq__content {
    padding: 0 {{ section.settings.accordion_padding }}px {{ section.settings.accordion_padding }}px {{ section.settings.accordion_padding }}px;
    color: {{ section.settings.answer_color }};
  }

  .pdp-faq__toggle {
    color: {{ accent_color }};
    font-size: 20px;
    line-height: 1;
  }
</style>

<div class="pdp-faq section-{{ section.id }}">
  <div class="pdp-faq__inner">
    <div class="pdp-faq__header">
      {% if section.settings.heading != blank %}
        <h2 class="pdp-faq__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="pdp-faq__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="pdp-faq__list">
      {% for block in section.blocks %}
        <details class="pdp-faq__item" {% if section.settings.first_item_open and forloop.first %} open{% endif %} {{ block.shopify_attributes }}>
          <summary class="pdp-faq__summary">
            <span>{{ block.settings.question }}</span>
            <span class="pdp-faq__toggle" aria-hidden="true">+</span>
          </summary>
          <div class="pdp-faq__content">
            {{ block.settings.answer }}
          </div>
        </details>
      {% endfor %}
    </div>
  </div>
</div>

{% if section.settings.enable_faq_schema %}
  {%- assign faqs = section.blocks | map: 'settings' -%}
  {%- capture faq_json -%}
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
        {%- for faq in faqs -%}
          {
            "@type": "Question",
            "name": {{ faq.question | strip_html | strip_newlines | json }},
            "acceptedAnswer": {
              "@type": "Answer",
              "text": {{ faq.answer | json }}
            }
          }{% unless forloop.last %},{% endunless %}
        {%- endfor -%}
      ]
    }
  {%- endcapture -%}
  <script type="application/ld+json">{{ faq_json | strip }}</script>
{% endif %}

{% schema %}
{
  "name": "PDP FAQ",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "use_theme_colors",
      "label": "Use theme colors",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Question color",
      "default": "#1f1f1f"
    },
    {
      "type": "color",
      "id": "answer_color",
      "label": "Answer color",
      "default": "#3a3a3a"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#ef4a65"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "unit": "px",
      "min": 0,
      "max": 120,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "unit": "px",
      "min": 0,
      "max": 120,
      "default": 60
    },
    {
      "type": "range",
      "id": "side_padding",
      "label": "Side padding",
      "unit": "px",
      "min": 0,
      "max": 80,
      "default": 24
    },
    {
      "type": "range",
      "id": "margin_top",
      "label": "Margin top",
      "unit": "px",
      "min": 0,
      "max": 100,
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "label": "Margin bottom",
      "unit": "px",
      "min": 0,
      "max": 100,
      "default": 0
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width",
      "unit": "px",
      "min": 700,
      "max": 1400,
      "step": 10,
      "default": 920
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently asked questions"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "unit": "px",
      "min": 22,
      "max": 48,
      "default": 30
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Help customers find answers fast and improve conversion."
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#4a4a4a"
    },
    {
      "type": "range",
      "id": "accordion_gap",
      "label": "Space between items",
      "unit": "px",
      "min": 4,
      "max": 28,
      "default": 10
    },
    {
      "type": "range",
      "id": "accordion_padding",
      "label": "Accordion padding",
      "unit": "px",
      "min": 10,
      "max": 32,
      "default": 16
    },
    {
      "type": "range",
      "id": "accordion_radius",
      "label": "Accordion radius",
      "unit": "px",
      "min": 0,
      "max": 24,
      "default": 12
    },
    {
      "type": "range",
      "id": "accordion_border_width",
      "label": "Border width",
      "unit": "px",
      "min": 0,
      "max": 3,
      "default": 1
    },
    {
      "type": "color",
      "id": "accordion_border_color",
      "label": "Border color",
      "default": "#ececec"
    },
    {
      "type": "color",
      "id": "accordion_background",
      "label": "Accordion background",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "first_item_open",
      "label": "Open first item by default",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_faq_schema",
      "label": "Enable FAQ schema JSON-LD",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What makes this different?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "Every purchase comes with dermatologist guidance, proven actives, and a satisfaction guarantee."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "PDP FAQ",
      "blocks": [
        { "type": "faq" },
        { "type": "faq" },
        { "type": "faq" }
      ]
    }
  ]
}
{% endschema %}
