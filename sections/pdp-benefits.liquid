{% liquid
  assign use_theme_colors = section.settings.use_theme_colors
  if use_theme_colors == nil
    assign use_theme_colors = true
  endif

  if use_theme_colors
    assign background_color = settings.global_section_background_color
    assign text_color = settings.global_section_text_color
    assign accent_color = settings.global_section_accent_1_color
  else
    assign background_color = section.settings.background_color
    assign text_color = section.settings.text_color
    assign accent_color = section.settings.accent_color
  endif
%}

<style>
  .pdp-benefits.section-{{ section.id }} {
    background: {{ background_color }};
    color: {{ text_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.side_padding }}px {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .pdp-benefits__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    text-align: center;
    display: grid;
    gap: 22px;
  }

  .pdp-benefits__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: {{ accent_color | color_lighten: 40 }};
    color: {{ accent_color }};
    padding: 6px 12px;
    border-radius: 999px;
    width: fit-content;
    margin: 0 auto;
    font-weight: var(--font-weight-medium);
  }

  .pdp-benefits__heading {
    margin: 0;
    font-size: {{ section.settings.heading_size }}px;
    letter-spacing: var(--letter-spacing-heading);
  }

  .pdp-benefits__subheading {
    margin: 0;
    color: {{ section.settings.subheading_color | default: text_color }};
    max-width: 720px;
    justify-self: center;
    line-height: 1.5;
  }

  .pdp-benefits__grid {
    display: grid;
    gap: {{ section.settings.card_gap }}px;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, minmax(0, 1fr));
  }

  @media (min-width: 768px) {
    .pdp-benefits__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, minmax(0, 1fr));
    }
  }

  .pdp-benefits__card {
    padding: {{ section.settings.card_padding }}px;
    border-radius: {{ section.settings.card_radius }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    background: {{ section.settings.card_background }};
    text-align: left;
    display: grid;
    gap: 10px;
    height: 100%;
  }

  .pdp-benefits__icon {
    width: 56px;
    height: 56px;
    border-radius: {{ section.settings.icon_radius }}px;
    background: {{ accent_color | color_lighten: 40 }};
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .pdp-benefits__icon img {
    max-width: 32px;
    max-height: 32px;
  }

  .pdp-benefits__badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 4px 10px;
    border-radius: 999px;
    background: {{ accent_color }};
    color: {{ settings.global_section_background_color }};
    font-size: 12px;
    font-weight: var(--font-weight-medium);
  }

  .pdp-benefits__title {
    margin: 0;
    font-size: {{ section.settings.card_heading_size }}px;
  }

  .pdp-benefits__text {
    margin: 0;
    color: {{ section.settings.card_text_color }};
    line-height: 1.5;
  }
</style>

<div class="pdp-benefits section-{{ section.id }}">
  <div class="pdp-benefits__inner">
    {% if section.settings.eyebrow != blank %}
      <div class="pdp-benefits__eyebrow">
        {% if section.settings.eyebrow_icon != blank %}
          <img src="{{ section.settings.eyebrow_icon | img_url: '60x' }}" alt="" width="18" height="18" loading="lazy">
        {% endif %}
        <span>{{ section.settings.eyebrow }}</span>
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="pdp-benefits__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="pdp-benefits__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="pdp-benefits__grid">
      {% for block in section.blocks %}
        <div class="pdp-benefits__card" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <span class="pdp-benefits__icon">
              <img src="{{ block.settings.icon | img_url: '80x' }}" alt="" loading="lazy">
            </span>
          {% endif %}

          {% if block.settings.badge != blank %}
            <span class="pdp-benefits__badge">
              {% if block.settings.badge_icon != blank %}
                <img src="{{ block.settings.badge_icon | img_url: '60x' }}" alt="" width="14" height="14" loading="lazy">
              {% endif %}
              {{ block.settings.badge }}
            </span>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="pdp-benefits__title">{{ block.settings.title }}</h3>
          {% endif %}

          {% if block.settings.text != blank %}
            <p class="pdp-benefits__text">{{ block.settings.text }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

