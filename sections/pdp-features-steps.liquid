{% liquid
  assign use_theme_colors = section.settings.use_theme_colors
  if use_theme_colors == nil
    assign use_theme_colors = true
  endif

  if use_theme_colors
    assign background_color = settings.global_section_background_color
    assign text_color = settings.global_section_text_color
    assign accent_color = settings.global_section_accent_1_color
  else
    assign background_color = section.settings.background_color
    assign text_color = section.settings.text_color
    assign accent_color = section.settings.accent_color
  endif
%}

<style>
  .pdp-steps.section-{{ section.id }} {
    background: {{ background_color }};
    color: {{ text_color }};
    padding: {{ section.settings.padding_top }}px {{ section.settings.side_padding }}px {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    letter-spacing: var(--letter-spacing-body);
  }

  .pdp-steps__inner {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    gap: 18px;
  }

  .pdp-steps__header {
    display: grid;
    gap: 10px;
    text-align: center;
  }

  .pdp-steps__eyebrow {
    display: inline-flex;
    justify-self: center;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    border-radius: 999px;
    background: {{ accent_color | color_lighten: 40 }};
    color: {{ accent_color }};
    font-weight: var(--font-weight-medium);
  }

  .pdp-steps__heading {
    margin: 0;
    font-size: {{ section.settings.heading_size }}px;
    letter-spacing: var(--letter-spacing-heading);
  }

  .pdp-steps__subheading {
    margin: 0;
    color: {{ section.settings.subheading_color | default: text_color }};
    max-width: 760px;
    justify-self: center;
    line-height: 1.5;
  }

  .pdp-steps__list {
    display: grid;
    gap: {{ section.settings.step_gap }}px;
  }

  .pdp-step {
    display: grid;
    gap: 16px;
    padding: {{ section.settings.step_padding }}px;
    border-radius: {{ section.settings.step_radius }}px;
    background: {{ section.settings.step_background }};
    border: {{ section.settings.step_border_width }}px solid {{ section.settings.step_border_color }};
    align-items: center;
  }

  @media (min-width: 900px) {
    .pdp-step {
      grid-template-columns: {% if section.settings.layout_style == 'alternating' %} repeat(2, minmax(0, 1fr)) {% else %} minmax(0, {{ section.settings.media_width }}%) minmax(0, {{ 100 | minus: section.settings.media_width }}%) {% endif %};
    }

    {% if section.settings.layout_style == 'alternating' %}
      .pdp-step:nth-child(even) {
        grid-template-columns: minmax(0, {{ 100 | minus: section.settings.media_width }}%) minmax(0, {{ section.settings.media_width }}%);
      }
      .pdp-step:nth-child(even) .pdp-step__media {
        order: 2;
      }
    {% endif %}
  }

  .pdp-step__media {
    position: relative;
    border-radius: {{ section.settings.media_radius }}px;
    overflow: hidden;
    background: {{ section.settings.media_background }};
    min-height: 240px;
  }

  .pdp-step__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .pdp-step__video {
    position: relative;
    padding-top: {{ section.settings.video_aspect_ratio }}%;
  }

  .pdp-step__video iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .pdp-step__content {
    display: grid;
    gap: 10px;
  }

  .pdp-step__badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 4px 10px;
    border-radius: 999px;
    background: {{ accent_color | color_lighten: 42 }};
    color: {{ accent_color }};
    font-size: 12px;
    width: fit-content;
  }

  .pdp-step__title {
    margin: 0;
    font-size: {{ section.settings.step_title_size }}px;
    display: flex;
    gap: 8px;
    align-items: baseline;
  }

  .pdp-step__number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: {{ accent_color }};
    color: {{ settings.global_section_background_color }};
    font-weight: var(--font-weight-bold);
    font-size: 14px;
  }

  .pdp-step__text {
    margin: 0;
    color: {{ section.settings.step_text_color }};
    line-height: 1.6;
  }
</style>

<div class="pdp-steps section-{{ section.id }}">
  <div class="pdp-steps__inner">
    <div class="pdp-steps__header">
      {% if section.settings.eyebrow != blank %}
        <div class="pdp-steps__eyebrow">
          {% if section.settings.eyebrow_icon != blank %}
            <img src="{{ section.settings.eyebrow_icon | img_url: '60x' }}" alt="" width="18" height="18" loading="lazy">
          {% endif %}
          <span>{{ section.settings.eyebrow }}</span>
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="pdp-steps__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <p class="pdp-steps__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="pdp-steps__list">
      {% for block in section.blocks %}
        <div class="pdp-step" {{ block.shopify_attributes }}>
          <div class="pdp-step__media">
            {% if block.settings.video_url != blank %}
              <div class="pdp-step__video">
                {% if block.settings.video_url.type == 'youtube' %}
                  <iframe src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?rel=0&showinfo=0" allowfullscreen title="{{ block.settings.media_alt | escape }}"></iframe>
                {% elsif block.settings.video_url.type == 'vimeo' %}
                  <iframe src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}" allowfullscreen title="{{ block.settings.media_alt | escape }}"></iframe>
                {% endif %}
              </div>
            {% elsif block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '900x' }}" alt="{{ block.settings.media_alt | escape }}" loading="lazy">
            {% else %}
              <div style="width:100%;height:100%;background: {{ section.settings.media_background }};"></div>
            {% endif %}
          </div>

          <div class="pdp-step__content">
            {% if block.settings.badge != blank %}
              <div class="pdp-step__badge">
                {% if block.settings.badge_icon != blank %}
                  <img src="{{ block.settings.badge_icon | img_url: '60x' }}" alt="" width="14" height="14" loading="lazy">
                {% endif %}
                {{ block.settings.badge }}
              </div>
            {% endif %}

            {% if block.settings.title != blank %}
              <h3 class="pdp-step__title">
                {% if section.settings.show_numbers %}
                  <span class="pdp-step__number">{{ forloop.index }}</span>
                {% endif %}
                <span>{{ block.settings.title }}</span>
              </h3>
            {% endif %}

            {% if block.settings.text != blank %}
              <p class="pdp-step__text">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

